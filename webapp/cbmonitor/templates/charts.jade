html(lang="en")
    head
        title cbmonitor
        include static
        link(rel="stylesheet", href="/static/css/charts.css")
        script(src="/static/js/observables.js")
        script(src="/static/js/views.js")
        script(src="/static/js/graph.js")
        script(src="/static/js/dialogs.js")
        script(src="/static/js/seriesly.js")
        script(src="/static/js/charts.js")
        script(src='/static/js/vendor/d3.v2.js')
        script(src='/static/js/vendor/nv.d3.js')
    body
        include navbar
        div.main
            div.sources
                div#accordion
                    h3  Metrics
                    div
                        div.selectors
                            label(for="met_cluster") Select cluster
                                select#met_cluster(name="met_cluster")
                            label(for="met_server") Select server
                                select#met_server(name="met_server")
                            label(for="met_bucket") Select bucket
                                select#met_bucket(name="met_bucket")
                            ul#metrics_ul
                    h3  Events
                    div
                        div.selectors
                            label(for="evnt_cluster") Select cluster
                                select#evnt_cluster(name="evnt_cluster")
                            label(for="evnt_server") Select server
                                select#evnt_server(name="evnt_server")
                            label(for="evnt_bucket") Select bucket
                                select#evnt_bucket(name="evnt_bucket")
                            ul#events_ul
            div.charts
                div.charts_panel
                    div.cpanel_left
                        div.btn-group(data-toggle="buttons-radio")
                            button#view1.btn.btn-mini.vradio(type="button") 1 view
                            button#view2.btn.btn-mini.vradio(type="button") 2 views
                            button#view4.btn.btn-mini.vradio(type="button") 4 views
                    div.cpanel_middle
                        button#clear_views.btn.btn-mini Clear All
                    div.cpanel_right
                        div.btn-group(data-toggle="buttons-radio")
                            button#minute.btn.btn-mini(type="button") minute
                            button#hour.btn.btn-mini(type="button") hour
                            button#day.btn.btn-mini(type="button") day
                            button#week.btn.btn-mini(type="button") week
                            button#month.btn.btn-mini(type="button") month
                            button#all.btn.btn-mini(type="button") all
                div#views
                    div.chart_view_single#first_view
                        svg
        div#spinner
        include footer
